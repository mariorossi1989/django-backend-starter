# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Note: .env is in .gitignore and should never be committed

# ============================================================================
# Environment State
# ============================================================================
# development: Local development with debug enabled
# production: Production environment with security hardening
ENV_STATE="development"

# ============================================================================
# Django Settings
# ============================================================================
# Django secret key - use a strong, random value in production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY="your-secret-key-here-change-in-production"

# Debug mode - should be False in production
DJANGO_DEBUG="True"

# ============================================================================
# Database Configuration
# ============================================================================
# Multi-database support: Define which database aliases to load
# Comma-separated list of database aliases (default is always included)
# Example: DB_ALIASES=["default", "db1", "db2"]
DB_ALIASES="default"

# --- Default Database (Primary) ---
# PostgreSQL connection settings for the default database
DB_ENGINE="postgresql"
DB_NAME="core"
DB_USER="dev_user"
DB_PASSWORD="dev_password"
DB_HOST="localhost"
DB_PORT="5432"

# --- Secondary Database 1 (Optional) ---
# Additional database configuration
# Uncomment and configure if using multiple databases
# DB_DB1_ENGINE="postgresql"
# DB_DB1_NAME="database1"
# DB_DB1_USER="db1_user"
# DB_DB1_PASSWORD="db1_password"
# DB_DB1_HOST="localhost"
# DB_DB1_PORT="5432"

