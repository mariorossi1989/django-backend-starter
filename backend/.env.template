# Uncomment and configure if using multiple databases
# DB_DB3_ENGINE="postgresql"
# DB_DB3_NAME="database3"
# DB_DB3_USER="db3_user"
# DB_DB3_PASSWORD="db3_password"
# DB_DB3_HOST="localhost"
# DB_DB3_PORT="5432"

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG (verbose output)
# Production: INFO or WARNING (reduce noise)
LOG_LEVEL="DEBUG"

# Directory for log files (development: console-only, production: file-based)
LOG_DIR="logs"
